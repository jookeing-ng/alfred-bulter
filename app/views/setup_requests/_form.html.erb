                      <%= form_for @setup, html: {class: "form-horizontal", role: "form"} do |f| %>
                        
                        <div class="form-group">
                          <%= f.label :name, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.text_field :name, class: "form-control", placeholder: "Tom Hanks" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <%= f.label :email, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.text_field :email, class: "form-control", readonly: true, disabled: true %>
                            <span class="help-block">
                              <small>
                                <i class="fa fa-info-circle" aria-hidden="true"></i> Email is based on email your store registered with Shopify</i>
                              </small>
                            </span>
                          </div>
                        </div>

                        <div class="form-group">
                          <%= f.label :sibject, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.text_field :subject, class: "form-control", placeholder: "Import Product" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <%= f.label :source_type, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.select :source_type, Settings.source_type.map{|k,v|[v,k]}, {}, class: "form-control source-type-select select2-select" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <%= f.label :file_format, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.select :file_format, Settings.file_format.map{|k,v|[v,k]}, {}, class: "form-control select2-select" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <%= f.label :description, class: "col-md-2 control-label" %>
                          <div class="col-md-8">
                            <%= f.text_area :description, rows: 15, class: "form-control", style:"resize:none;" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="col-md-12 text-center">
                            <%= f.submit "Submit", class: "btn btn-info" %>  
                          </div>
                        </div>
                      <% end %>


